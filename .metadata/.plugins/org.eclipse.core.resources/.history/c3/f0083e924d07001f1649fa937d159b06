package Classpart;

import java.util.Scanner;

public class Arrayt1 {
	public static void main(String[] args) {
		Scanner scanner =new Scanner(System.in);
		
	 int maxProducts =10;//배열 최대 갯수 
	 String[] productNames =new String[maxProducts];//담을수있는 물건최대갯수 10개 
	 int[] productPrices=new int[maxProducts]; //담을수있는 가격도 10개
	int productCount=0;// 카운트 0개 
	
 
	//계속 돌아야하니까 
	while(true) {
		System.out.print("1.상품 등록 | 2.상품 목록 | 3.종료\n메뉴를 선택하세요:");// \n을 누르면 띄어쓰기
		int menu = scanner.nextInt();
		scanner.nextLine();
		
	    if(menu==1) {
		System.out.print("1.상품을 입력하세요 :");
		productNames[maxProducts]=scanner.nextLine();
		System.out.print("2.상품 가격을 입력하세요 :");
		productPrices[maxProducts]=scanner.nextInt();
		
		productCount++;
	}
	}
	}
}
